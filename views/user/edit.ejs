<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.2/css/bootstrap.min.css" integrity="sha384-Smlep5jCw/wG7hdkwQ/Z5nLIefveQRIY9nfy6xoR1uRYBtpZgI6339F5dgvm/e9B" crossorigin="anonymous">

    <link rel="stylesheet" type="text/css" href="css/style.css">
  
  <title>Create User Profile</title>

</head>
<body>
  <%include ../_navbar.ejs%>

   
    <h1>User Profile</h1>
   
   
      <form action="/user" method="POST">
        
        <!-- would like this to auto-populate -->
        <input type="text" name="username" placeholder="username"><br>
        <br>
        <input type="text" name="email" placeholder="Email"><br>
        <br>
        <!-- can they change their password? -->
        <input type="text" name="password" placeholder="password"><br>
        <br>


        <input type="text" name="name" placeholder="Name"><br>
        <br>
        <input type="text" name="stateAndCity" placeholder="State and City"><br>
        <br>  
        
        <textarea type="text" name="bio" width="100" height="20" placeholder="Bio"></textarea>
        <br>
        <br>
        <input type="text" name="animalName" placeholder="Dogs name"><br>
        <br>
        
        <button type="submit">Save Profile</button>
      </form>
    </div>



<!-- Optional JavaScript -->


