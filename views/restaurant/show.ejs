  <h1>Restaurant Show Page</h1>


        <ul>
          <li>
            <a href="/">Home</a>
          </li>
          <li>
            <a href="/resturant">Restaurant Index</a>
          </li>
        </ul>
      
      <hr>
   
  
   
<!-- Form to show Restaurant info -->

  <h1><%=restaurant.name%></h1>
    <div>
      <h3><%=restaurant.typeOfRestaurant%></h3>
      <h3><%=restaurant.restaurantLocation%></h3>       
      <h3><%=restaurant.zipcode%></h3>       
      <h3><%=restaurant.price%></h3>       
      <h3><%=restaurant.rating%></h3>
      <h3><%=restaurant.website%></h3>

      <%for(let i = 0; i < restaurant.reviews.length; i++) {%>
        <p><%=restaurant.reviews[i].rating%></p>
        <p><%=restaurant.reviews[i].body%></p>

      <%}%>
       <br>


      <form action="/restaurant" method="POST">  
        <label>Rating: 1-4</label>
          <select class="form-control" id="exampleFormControlSelect2" name="rating">
              <option>1</option>
              <option>2</option>
              <option>3</option>
              <option>4</option>
          </select>  
        
          <textarea type="text" name="review" width="200" height="100" placeholder="Review"></textarea>
          <br>
          <br>
      
          <button type="submit">Submit</button>
        </form>
        
        </div>

        <section>
          <a href="/restaurants/<%=restaurant.id%>/edit">Edit</a>
        </section>
        
        <section>
          <form action="/restaurants/<%=restaurant.id%>?_method=DELETE" method="post">
              <input type="submit" value="Delete Restaurant"/>
          </form>
        </section>
      </div>
    <!-- Optional JavaScript -->


